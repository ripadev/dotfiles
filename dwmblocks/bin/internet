#!/bin/sh

# Show wifi ðŸ“¶ and percent strength or ðŸ“¡ if none.
# Show ðŸŒ if connected to ethernet or âŽ if none.
# Show ðŸ”’ if a vpn connection is active

case $BLOCK_BUTTON in
	1) "$TERMINAL" -e nmtui; pkill -RTMIN+4 dwmblocks ;;
	3) notify-send "ðŸŒ Internet module" "\- Click to connect
ðŸ“¡: no wifi connection
ðŸ“¶: wifi connection with quality
âŽ: no ethernet
ðŸŒ: ethernet working
ðŸ”’: vpn is active
" ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

case "$(cat /sys/class/net/w*/operstate 2>/dev/null)" in
	down) wifiicon="" ;;
	# up) wifiicon="$(awk '/^\s*w/ { print "ðŸ“¶", int($3 * 100 / 70) "% " }' /proc/net/wireless)" wifiname=$(iw dev wlp4s0 info | grep ssid | awk '{print $2}');;
	up) wifiicon="$(awk '/^\s*w/ { print int($3 * 100 / 70) "%" }' /proc/net/wireless)" wifiname=$(iw dev | grep ssid | awk '{print $2}');;
esac

printf "%s%s%s\n" "Sig:$wifiicon-" "$wifiname" "$(sed "s/down/<down>/;s/up/<up>/" /sys/class/net/w*/operstate 2>/dev/null)" 
